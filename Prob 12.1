 vector<int> topoSort(int V, vector<vector<int>>& edges) {
        vector<vector<int>> adj(V);
        vector<int> indeg(V, 0);
        for (auto &e : edges) {
            int u = e[0], v = e[1];
            adj[u].push_back(v);
            indeg[v]++;
        }
        queue <int> q;
        for(int i = 0; i < V; i++){
            if(indeg[i] == 0){
                q.push(i);
            }
        }
        vector<int> topo;
        while(!q.empty()){
            int u = q.front(); q.pop();
            topo.push_back(u);
            for(int v : adj[u]){
                indeg[v]--;
                if(indeg[v] == 0) q.push(v);
            }
        }
        return topo;
    }
